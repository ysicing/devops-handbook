:80 {
    # 日志
    import LOG "/var/log/blog.ysicing.net.log"

    # TLS、HSTS、ACME 等通用配置
    import COMMON_CONFIG

    metrics /metrics

    root * /root/www

    @geofilter {
        not geocn {
            db_file "/root/geoip.mmdb"
        }
    }

    redir @geofilter https://ysicing.me{uri} permanent
    file_server
}