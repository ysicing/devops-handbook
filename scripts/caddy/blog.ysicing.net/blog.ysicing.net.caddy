:80 {
    # 日志
    import LOG "/var/log/blog.ysicing.net.log"

    encode zstd gzip

    header Blog-Header {$POD_NAME:k3s-nj}

    handle_errors {
	    redir https://blog.ysicing.net/tags
    }

    @geofilter {
        not geocn {
            db_file "/etc/caddy/geoip.mmdb"
        }
    }

    handle_path /posts/451-* {
      redir https://ysicing.me/posts/451-{uri} permanent
    }

    root * /root/www

    redir @geofilter https://ysicing.me{uri} permanent
    file_server
}
