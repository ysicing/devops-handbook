:80 {
    # 日志
    import LOG "/var/log/blog.ysicing.net.log"

    # TLS、HSTS、ACME 等通用配置
    import COMMON_CONFIG

    metrics /metrics

    root * /root/www

    @denycn not maxmind_geolocation {
        db_path "/root/geoip.mmdb"
        deny_countries CN
    }

    redir @denycn https://ysicing.me{uri} permanent

    file_server
}