:80 {
    # 日志
    import LOG "/var/log/ysicing.me.log"

    encode zstd gzip

    handle_errors {
	    respond "err: {err.status_code}, https://blog.ysicing.net"
    }

    root * /root/www

    @geofilter {
        geocn {
            db_file "/etc/caddy/geoip.mmdb"
        }
    }

    redir @geofilter https://blog.ysicing.net{uri} permanent
    file_server
}
